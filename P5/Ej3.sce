function A = genA(n)
    A = 2*eye(n,n) - diag(ones(n-1,1),-1) - diag(ones(n-1,1),1)
endfunction

function N = nGauss(A)
    n = size(A,1)
    I = eye(n,n)
    N = tril(A)
    
    N = (I-inv(N)*A)
endfunction

